<h1>List Review</h1>

<%= link_to "New Review", new_review_path %>
<% @reviews.each do |review| %>
  <h3><%= review.title.html_safe %></h3>
  <p><%= review.content.html_safe %></p>
  <%= link_to "Edit Review", edit_review_path(review) %>
  <%= link_to "Delete Review", review_path(review), method: :delete,
    data: {confirm: "Are you sure?"}  %>
  <% if review != @reviews.last %>
    <hr />
  <% end %>
<% end %>
