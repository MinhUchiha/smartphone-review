<div class="panel panel-default center assessment-panel">
  <div class="panel-heading">
    <h3>
      Assessing <%= link_to @review.user.name, [:admins, @review.user] %>'s review
    </h3>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th class="center">Created At</th>
        <th class="center">Current Status</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= @review.created_at.strftime("%d/%m/%Y %H:%M") %></td>
        <td><%= @review.status.capitalize %></td>
      </tr>
    </tbody>
  </table>

  <div class="panel-footer">
    <div class="row">
      <%= button_to "Approve", admins_review_path(@review, review: {status: :approved}),
        method: :put, data: {confirm: "Are you sure?"}, remote: true, disabled: @review.approved?,
        class: "btn btn-success col-md-4 col-md-offset-1" %>
      <%= button_to "Reject", admins_review_path(@review, review: {status: :rejected}),
       method: :put, data: {confirm: "Are you sure?"}, remote: true, disabled: @review.rejected?,
        class: "btn btn-danger col-md-4 col-md-offset-2" %>
    </div>
  </div>
</div>
