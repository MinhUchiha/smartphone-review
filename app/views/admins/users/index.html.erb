<% provide :title, "All Users" %>

<div class="center">
  <h1>Users</h1>
  <%= link_to "New User", new_admins_user_path, class: "btn btn-primary"%>
  <hr />
</div>

<div class="panel panel-default">
  <table class="table">
    <thead>
      <tr>
        <th class="col-md-9">Email</th>
        <th class="col-md-3 center">Actions</th>
      </tr>
    </thead>
      <tbody>
      <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.email, [:admins, user] %></td>
            <% unless current_user == user %>
              <td>
                <%= link_to "Edit", edit_admins_user_path(user),
              class: "btn btn-success col-md-4 col-md-offset-1" %>
                <%= link_to "Delete", [:admins, user], method: :delete,
              data: { confirm: "Are you sure?" },
              class: "btn btn-danger col-md-4 col-md-offset-2" %>
            <% end %>
          </tr>
      <% end %>
    </tbody>
  </table>
</div>
