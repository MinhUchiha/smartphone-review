<%= form_for comment, remote: true do |f| %>
  <%= f.hidden_field :review_id, value: review.id %>

  <%= f.text_field :content, rows: 1, placeholder: 'Leave a comment...',
    class: "form-control" %>
  <div class="input-group pull-right">
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
