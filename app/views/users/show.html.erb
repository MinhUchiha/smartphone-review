<% provide :title, "My Reviews" %>

<div class="center">
  <h1>My Reviews</h1>
  <hr />
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    You have <%= pluralize(@total, "review") %> in total.
  </div>

  <table class="table">
    <thead>
      <tr>
        <th class="col-md-3">Title</td>
        <th class="col-md-6">Summary</td>
        <th class="col-md-3 center">Actions</td>
      </tr>
    </thead>

    <tbody>
      <% if @reviews.any? %>
        <% @reviews.each do |review| %>
          <tr>
            <td><%= link_to review.title, review %></td>
            <td></td>
            <td>
              <%= link_to "Edit", edit_review_path(review),
                class: "btn btn-success col-md-4 col-md-offset-1" %>
              <%= link_to "Delete", review, method: :delete,
                data: { confirm: "Are you sure?" },
                class: "btn btn-danger col-md-4 col-md-offset-2" %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
